<import src="../../common/header.wxml" />
<import src="../../common/footer.wxml" />
<view class="container">
  <template is="header" data="{{title: pageTitle}}"></template>
  <view>
    <view>
      <text>拨打电话</text>
    </view>
    <view style="margin: 20px auto; border-bottom: 1px solid #48C23D;">
      <input type="number" id="phone" placeholder="请输入电话号码" bindinput="inputChanged" />
    </view>
    <view>
      <button bindtap="callPhone">呼叫</button>
    </view>
  </view>
</view>