.view-wrp {
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  box-sizing: border-box;
}

.page-header {
    padding: 20px 0;
    text-align: center;
}

.page-title {
    font-size: 42rpx;
    font-weight: bold;
}

.flex-desc-list {
    padding: 20px 10px;
    margin-bottom: 20px;
    background-color: #f5f5f5;
    font-size: 28rpx;
}

.flex-desc-row {
    padding: 5px 3px;
    margin: 5px auto;
    background-color: #fff;
}

.flex-demo-list {
    padding: 20px 0;
    margin-bottom: 20px;
    background-color: #f5f5f5;
}

.flex-demo-item {
    margin: 10px 0;
}

.flex-demo-item-title {
    color: deepskyblue;
}

.flex-demo-list .flex-item {
    border: 1px solid blue;
    background-color: chocolate;
}

.flex-demo-row {
    display: flex;
    flex-direction: row; /*默认column*/
}

.flex-demo-row-reverse {
    display: flex;
    flex-direction: row-reverse;
}

.flex-demo-column {
    display: flex;
    flex-direction: column;
}

.flex-demo-column-reverse {
    display: flex;
    flex-direction: column-reverse;
}

/* 主轴对齐样式 */
.justify-content-flex-start {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.justify-content-center {
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.justify-content-flex-end {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.justify-content-space-between {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.justify-content-space-around {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

/* 侧轴对齐样式 */
.align-items-stretch {
    display: flex;
    flex-direction: row;
    align-items: stretch;
}

.align-items-flex-start {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
}

.align-items-flex-end {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
}

.align-items-center {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.align-items-baseline {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}